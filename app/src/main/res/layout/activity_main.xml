<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido al Sistema de Inventario"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnArticulos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artículos"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCategorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categorías"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnProveedores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proveedores"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnClientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clientes"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnEmpleados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empleados"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnMovimientos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entradas / Salidas"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reporte de Inventario"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnConfiguracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuración"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:backgroundTint="#B71C1C"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
